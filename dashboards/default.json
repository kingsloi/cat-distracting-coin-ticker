{
  "name": "simple-dashboard",
  "layout": {
    "columns": 12,
    "rows": 6
  },
  "datasources": {
    "ds-cryptocompare": {
      "module": "plugins/cryptocompare-plugin",
      "schedule": 86400000,
      "options": {
        "symbols": ["BTC", "ETH"]
      }
    }
  },
  "widgets": [
    {
      "position": {
        "x": 0,
        "y": 0,
        "w": 9,
        "h": 1
      },
      "widget": "vudash-widget-time"
    },
    {
      "position": {
        "x": 0,
        "y": 1,
        "w": 9,
        "h": 2
      },
      "datasource": "ds-cryptocompare",
      "options": {
        "description": "Bitcoin Price (GBP) / days ago",
        "labels": [7,6,5,4,3,2,1]
      },
      "widget": "@vudash/widget-chart"
    }
  ]
}

